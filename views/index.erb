
<% if @divisions.any?() %>
<ul>
  <% @divisions.each() do |division| %>
  <li><a href="/divisions/<%= division.id %>"><%= division.name() %></a></li>
  <ul>
    <% division.employees().each() do |employee| %>
    <li><%= employee.name() %></li>
    <ul><lh>Current Projects:</lh>
      <% employee.projects().not_done().each() do |project| %>
      <li> <a href="/projects/<%= project.id %>"><%= project.name() %></a>, <%= project.created_at() %> </li>
      <% end %>
    </ul>
    <br />
    <ul><lh>Completed Projects:</lh>
      <% employee.projects().done().each() do |project| %>
      <li> <strike><a href="/projects/<%= project.id %>"><%= project.name() %></a>, <%= project.created_at() %></strike></li>
      <% end %>
    </ul>

    <% end %>
  </ul>
  <% end %>

</ul>
<% end %>

<h3> Add a Division </h3>
<form action="/divisions" method="post">
  <div class = "form-group">
    <label for="name"> Enter a Division's Name</label>
    <input type="text" name="name" class="form-control" id="name">
  </div>
  <button class="btn" type="submit">Add Division</button>
</form>

<h3> Add an Employee to a Division</h3>
<form action="/employees" method="post">
  <label for="division_id">Select a division</label>
  <select id="division_id" name="division_id" type="text">
    <% @divisions.each() do |division| %>
      <option value="<%= division.id() %>"> <%= division.name() %> </option>
      <% end %>
    </select>
</br>
  <label for="name">Enter an employee's name</label>
  <input type="text" name="name" id="name">

  <button class="btn" type="submit">Add Employee</button>
</form>

<h3>Add a Project to an Employee</h3>
